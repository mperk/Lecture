<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<%= paginate @movies %>
<%#= link_to "Prev", movies_path(:page => @prev_page )  %> &nbsp;
<%#= link_to "Next", movies_path(:page => @next_page)  %>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Director</th>
    <th>Description</th>
    <th>Year</th>
    <th>Length</th>
      <th>Format</th>
    <th>Thumbnail</th>
    <% if current.user.try(:admin?) %>
        <th colspan="3"></th>
    <% else %>
        <th/>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= link_to movie.proper_name, movie_path(movie) %></td>
        <td><%= movie.director %></td>
        <td><%= truncate(movie.description.html_safe, :length => 20 )%></td>
        <!-- truncate yukarÄ±daki 3 nokta koymakta-->
        <td><%= movie.year %></td>
        <td><%= movie.length %></td>
        <td><%= movie.format %></td>
        <td><%= link_to(image_tag(movie.thumbnail), movie) %></td>
        <td><%= link_to 'Show', movie %></td>
        <% if current.user.try(:admin?) %>
            <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
            <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

