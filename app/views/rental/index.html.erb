<% if is_admin? %>
    <h2>ADMİN!</h2>
    <%= link_to "Movies Admin", movies_path %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<%= paginate @movies %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Director</th>
    <th>Description</th>
    <th>Year</th>
    <th>Length</th>
    <th>Format</th>
    <th>Thumbnail</th>
    <th/>
  </tr>
  </thead>

  <tbody>
  <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= link_to movie.proper_name, rental_show_path(movie) %></td>
        <td><%= movie.director %></td>
        <td><%= truncate(movie.description.html_safe, :length => 20 )%></td>
        <!-- truncate yukarıdaki 3 nokta koymakta-->
        <td><%= movie.year %></td>
        <td><%= movie.length %></td>
        <td><%= movie.format %></td>
        <td><%= link_to(image_tag(movie.thumbnail), movie) %></td>
        <td><%= link_to 'Show', rental_show_path(movie) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

